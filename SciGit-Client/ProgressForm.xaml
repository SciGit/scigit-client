<Window x:Class="SciGit_Client.ProgressForm" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Working..." Width="400" Background="#FFF1F1F1" ResizeMode="NoResize" Icon="/SciGit-Client;component/icon.ico" VerticalAlignment="Stretch" WindowStyle="SingleBorderWindow" SizeToContent="Height">
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo />
	</Window.TaskbarItemInfo>
	<Grid Margin="10" VerticalAlignment="Top">
		<StackPanel Orientation="Vertical">
			<TextBlock Margin="0,0,0,10" HorizontalAlignment="Left" Name="status" Text="Working..." />
			<ProgressBar Margin="0,0,0,10" Height="23" Name="progressBar" HorizontalAlignment="Stretch" />
			<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
				<Button Name="details" Content="Details..." Margin="0,0,10,0" Click="details_Click" />
                <Button Name="cancel" Content="Cancel" Margin="0,0,10,0" Click="cancel_Click" IsEnabled="False" />
				<Button Name="close" Content="Close" Click="close_Click" IsEnabled="False" IsCancel="True" />
			</StackPanel>
			<TextBox Name="textBox" VerticalScrollBarVisibility="Visible" Margin="0,10,0,0" IsReadOnly="True" IsEnabled="True" Height="80" />
		</StackPanel>
	</Grid>
</Window>